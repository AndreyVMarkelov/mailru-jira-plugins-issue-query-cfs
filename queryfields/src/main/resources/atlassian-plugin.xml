<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <!-- Resources -->
    <resource type="i18n" name="i18n" location="i18n.queryfields"/>

    <web-resource key="queryfieldsrsc" name="Mail.Ru query CF resources">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>
        <resource type="download" name="mailrusel.css" location="media/queryfields.css"/>
        <resource type="download" name="mailrusel.js" location="media/queryfields.js"/>
    </web-resource>
    <!-- End resources -->

    <!-- Custom fields -->
    <customfield-type key="mailru-linker-field" name="Mail.Ru Linker Field" class="ru.mail.jira.plugins.lf.LinkerField">
        <description>Mail.Ru Linker Field</description>
        <resource type="velocity" name="view" location="templates/view-linkerfield.vm"/>
        <resource type="velocity" name="column-view" location="templates/view-linkerfield.vm"/>
        <resource type="velocity" name="xml" location="templates/view-linkerfield.vm"/>
        <resource type="velocity" name="edit" location="templates/edit-linkerfield.vm"/>
    </customfield-type>

    <customfield-type key="mailru-linked-field" name="Mail.Ru Linked Field" class="ru.mail.jira.plugins.lf.LinkedField">
        <description>Mail.Ru Linked Field</description>
        <resource type="velocity" name="view" location="templates/view-linkedfield.vm"/>
        <resource type="velocity" name="column-view" location="templates/view-linkedfield.vm"/>
        <resource type="velocity" name="xml" location="templates/view-linkedfield.vm"/>
        <resource type="velocity" name="edit" location="templates/edit-linkedfield.vm"/>
    </customfield-type>
    <!-- End custom fields -->

    <customfield-searcher key="mailru-linker-field-searcher" name="Linker Field custom field Searcher"
                          i18n-name-key="mailru.selectcf.admin.seacrher" class="ru.mail.jira.plugins.lf.LirkerFieldSearcher">
        <description>Allow searching for a Linker Field select custom field.</description>
        <resource type="velocity" name="label" location="templates/label-linkerfield.vm"/>
        <resource type="velocity" name="search" location="templates/search-linkerfield.vm"/>
        <resource type="velocity" name="view" location="templates/view-search-linkerfield.vm"/>
        <valid-customfield-type package="${project.groupId}.${project.artifactId}" key="mailru-linker-field"/>
    </customfield-searcher>

    <web-item key="queryfields-configuration" name="Mail.Ru select CF configuration link" section="system.admin/globalsettings" weight="95">
        <label key="mailru.selectcf.admin"/>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition">
            <param name="permission">admin</param>
        </condition>
        <link linkId="queryfields-configuration_link">/secure/MailSelectConfig.jspa</link>
    </web-item>

    <webwork1 key="queryfields_conf" name="Mail.Ru select CF configuration" class="java.lang.Object">
        <actions>
            <action name="ru.mail.jira.plugins.lf.QueryFieldsConfig" alias="MailSelectConfig">
                <view name="input">/templates/queryfieldsconf.vm</view>
                <view name="success">/templates/queryfieldsconf.vm</view>
            </action>
        </actions>
    </webwork1>

    <component key="queryfields-config" name="Mail.Ru select Plug-In configuration" class="ru.mail.jira.plugins.lf.QueryFieldsMgrImpl"/>
    <component-import key="pluginSettingsFactory">
        <interface>com.atlassian.sal.api.pluginsettings.PluginSettingsFactory</interface>
    </component-import>
    <component-import key="applicationProperties">
        <interface>com.atlassian.sal.api.ApplicationProperties</interface>
    </component-import>

    <!-- Rest resources -->
    <rest key="queryfieldsws" path="/queryfieldsws" version="1.0">
        <description>Provides the REST resource for the Mail.Ru select CF plugin.</description>
    </rest>
    <!-- End rest -->
</atlassian-plugin>
